{
    "version": 2,
    "builds": [
        {
            "src": "server/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "client/dist/index.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/send",
            "dest": "/server/main.py"
        },
        {
            "src": "/api/receive",
            "dest": "/server/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/index.html"
        }
    ],
    "build": {
        "env": {
            "PYTHON_VERSION": "3.12"
        }
    }
}