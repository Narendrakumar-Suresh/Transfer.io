{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/dist"
            }
        },
        {
            "src": "server/api.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/send",
            "dest": "/server/api.py"
        },
        {
            "src": "/receive",
            "dest": "/server/api.py"
        }
    ]
}